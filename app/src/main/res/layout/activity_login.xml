<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/savedUsersListView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="16dp"
        android:padding="8dp"
        android:layout_weight="3"/>

    <LinearLayout
        android:layout_marginTop="24dp"
        android:id="@+id/linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:background="@color/seveBorder"
        android:layout_gravity="center_horizontal">


        <EditText
            android:id="@+id/steamIDEditText"
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="4dp"
            android:background="@color/colorWhite"
            android:digits="0123456789"
            android:hint="@string/login_steam_id"
            android:inputType="number"
            android:maxLines="1"
            android:padding="4dp"
            android:textAlignment="center"
            android:textColor="@color/seveBorder"
            android:textColorHint="@color/colorBlack"/>

        <Button
            android:id="@+id/submitButton"
            android:layout_width="80dp"
            android:layout_height="40dp"
            android:layout_alignBottom="@+id/steamIDEditText"
            android:layout_toEndOf="@+id/refreshButton"
            android:background="@color/seveBorder"
            android:text="@string/login_sign_up"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20sp"
            android:textStyle="normal"/>
    </LinearLayout>


